<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FABF69"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aclonica"
        android:text="Fruit Ninja"
        android:textColor="#7A4900"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/watermelonIv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/watermelon_half2"
        />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/watermelonIv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:text="0"
        android:textColor="#7A4900"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/cross1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/grey_cross"
        android:layout_alignParentRight="true"
        android:layout_marginRight="125dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/cross2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/grey_cross"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/cross3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/grey_cross"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/pause_btn"
        android:layout_marginTop="340dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textStyle="bold"
        android:shadowColor="#F4CAC7"
        android:shadowDx="10"
        android:shadowDy="-10"
        android:shadowRadius="10"
        android:textColor="#FA2D2D"
        android:fontFamily="@font/aclonica"
        />

    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textStyle="bold"
        android:shadowColor="#F4CAC7"
        android:shadowDx="10"
        android:shadowDy="-10"
        android:shadowRadius="10"
        android:textColor="#FA2D2D"
        android:fontFamily="@font/aclonica"
        />

    <TextView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:shadowColor="#F4CAC7"
        android:shadowDx="10"
        android:shadowDy="-10"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/aclonica"
        />

    <TextView
        android:id="@+id/gameOverTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:shadowColor="#F4CAC7"
        android:shadowDx="10"
        android:shadowDy="-10"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:fontFamily="@font/aclonica"
        />

</RelativeLayout>